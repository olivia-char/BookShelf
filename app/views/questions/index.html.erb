<div class="container">
	<h1>Book Personaility Quiz</h1>
	<form action="/users/<%= @user.id %>" method="post">
	<% @questions.each do |question| %>

	<p>Question <%= question.id %></p>
	<h3><%= question.question %></h3>
	
		<input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
		<div class="radio">
  			<label><input type="radio" name="question[c1]" value="1"><p><%= question.c1 %></p></label>
		</div>
		<div class="radio">
  			<label><input type="radio" name="question[c2]" value="2"><p><%= question.c2 %></p></label>
		</div>
		<div class="radio">
  			<label><input type="radio" name="question[c3]" value="3"><p><%= question.c3 %></p></label>
		</div>
		<div class="radio">
  			<label><input type="radio" name="question[c4]" value="4"><p><%= question.c4 %></p></label>
		</div>
		<div class="radio">
  			<label><input type="radio" name="question[c5]" value="5"><p><%= question.c5 %></p></label>
		</div>
	
	<% end %>
	<button class="btn btn-success">Submit</button>
	</form>
	
</div>

